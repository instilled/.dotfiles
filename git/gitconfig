[user]
  name = Fabio
  email = me@instilled.org

[merge]
  tool = vimdiff

[core]
  excludesfile = /Users/fabio/.dotfiles/gitignore-global
  pager = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less -r

[push]
  default = simple

[alias]
  # http://oli.jp/2012/git-powerup/
  l = log --all --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
  ll = log --all --stat --abbrev-commit
  p = log --all -p
